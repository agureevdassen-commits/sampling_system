# Переменные окружения для приложения

# Сервер
PORT=3000
NODE_ENV=development

# База данных PostgreSQL
# Пример для локальной разработки:
# DATABASE_URL=postgresql://user:password@localhost:5432/sampling_db
# Пример для продакшена (Heroku):
# DATABASE_URL=postgresql://user:password@host:5432/sampling_db?sslmode=require
DATABASE_URL=postgresql://postgres:password@localhost:5432/sampling_db

# API Key для защиты endpoints
API_KEY=sampling-dev-key-2025

# URL клиента (используется для CORS)
CLIENT_URL=http://localhost:3000

# Настройки логирования
LOG_LEVEL=info
